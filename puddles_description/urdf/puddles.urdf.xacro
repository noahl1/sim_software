<?xml version="1.0"?>
<robot name="puddles" xmlns:xacro="http://www.ros.org/wiki/xacro" >
  
	<xacro:arg name="debug" default="0"/>
	<xacro:arg name="namespace" default="puddles"/>

	<xacro:property name="namespace" value="$(arg namespace)"/>

	<!-- Include common xacros -->
	<xacro:include filename="$(find uuv_descriptions)/urdf/common.urdf.xacro"/>
	<xacro:include filename="$(find common_robot_description)/xacro/common_tags.xacro"/>
	<xacro:include filename="$(find common_robot_description)/xacro/common_links.xacro"/>
	<xacro:include filename="$(find common_robot_description)/xacro/common_joints.xacro"/>

	<!-- Create puddles -->
	<xacro:include filename="$(find puddles_description)/urdf/base.xacro"/>
	<xacro:include filename="$(find puddles_description)/urdf/thrusters.xacro"/>
	<xacro:include filename="$(find puddles_description)/urdf/sensors.xacro"/>

	<!-- Combine hydro links -->
	<!-- Can add more within uuv_links as the model grows -->
	<xacro:uuv_hydro_links>
	   <uuv_links>
		   <xacro:puddles_base_uuv_hydro_links/>
	   </uuv_links>
	</xacro:uuv_hydro_links>

	<!-- Joint state publisher plugin -->
	<xacro:default_joint_state_publisher namespace="$(arg namespace)" update_rate="10"/>

</robot>
